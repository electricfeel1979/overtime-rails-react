<tr>
  <td>
    <%= post.id %>
  </td>
  <td>
    <%= post.overtime_request %>
  </td>
  <td>
    <%= post.date %>
  </td>
  <td>
    <%= post.user.full_name %>
  </td>
  <td>
    <%= link_to truncate(post.rationale), post %>
  </td>
  <td>
    <%= status_label post.status %>
  </td>
  <td>
    <%= link_to '', edit_post_path(post), id: "edit_#{post.id}", class: 'bi bi-pencil index-icons' if policy(post).update? %>
  </td>
  <td>
    <%= link_to '', post_path(post), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, id: "delete_post_#{post.id}_from_index", class: 'bi bi-trash index-icons' %>
  </td>
</tr>